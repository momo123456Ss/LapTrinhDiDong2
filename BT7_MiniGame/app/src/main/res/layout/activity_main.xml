<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_player1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player One"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_player1_score"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_player2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player Two"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_player2_score"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_who_win"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Player x is win the match 1"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_0"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#413F43" />

        <Button
            android:id="@+id/btn_1"

            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#413F43" />

        <Button
            android:id="@+id/btn_2"

            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#413F43" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_3"
            android:layout_marginLeft="10dp"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:backgroundTint="#413F43" />

        <Button
            android:id="@+id/btn_4"

            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#413F43" />

        <Button
            android:id="@+id/btn_5"

            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#413F43" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_6"
            android:layout_marginLeft="10dp"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:backgroundTint="#413F43" />

        <Button
            android:id="@+id/btn_7"

            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#413F43" />

        <Button
            android:id="@+id/btn_8"

            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#413F43" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="Reset the game"
        android:id="@+id/btn_reset"/>
</LinearLayout>